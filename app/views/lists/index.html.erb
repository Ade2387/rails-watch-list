<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://cdn.pixabay.com/photo/2016/03/23/17/33/curtain-1275200_1280.png);">
  <div class="container">
    <h1>My Lists</h1>
  </div>
</div>

<div class="container">
  <div class="row mt-5">
      <% @lists.each do |list| %>
        <div class="col-4">
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://cdn.pixabay.com/photo/2019/08/18/19/40/la-4414887_1280.jpg')">
            <span class="list-title"><%= link_to list.name, list_path(list) %></span>
          </div>
        </div>
      <% end %>
    </div>
</div>
